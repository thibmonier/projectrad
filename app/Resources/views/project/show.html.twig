{% extends 'AvanzuAdminThemeBundle:layout:base-layout.html.twig' %}

{% block page_content %}
    <h1>Project</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ project.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ project.name }}</td>
            </tr>
            <tr>
                <th>Longname</th>
                <td>{{ project.longname }}</td>
            </tr>
        </tbody>
        <tfoot>
        <div class="btn btn-group">
<a href="{{ path('project_index') }}" class="btn btn-primary">Back to the list</a>
<a href="{{ path('project_edit', { 'id': project.id }) }}" class="btn btn-primary">Edit</a>
{{ form_start(delete_form) }}
                <input type="submit" value="Delete" class="btn btn-alert">
            {{ form_end(delete_form) }}
        </div>
        </tfoot>
    </table>

    <ul>
        <li>
            <a href="{{ path('project_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('project_edit', { 'id': project.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
