{% extends 'AvanzuAdminThemeBundle:layout:login-layout.html.twig' %}

{% block stylesheets %}
    {{parent()}}
    <link rel="stylesheet" href="{{ asset('css/override.css') }}" />
{% endblock %}


{% block page_content %}
    <div class="login-box">
        <div class="login-logo">
            <a href="../../index2.html"><b>OAB</b>TMA</a>
        </div><!-- /.login-logo -->
        <div class="login-box-body">
            <p class="login-box-msg">Connectez vous pour accéder à votre dashboard</p>
            <form action="../../index2.html" method="post">
                <div class="form-group has-feedback">
                    <input type="text" class="form-control" placeholder="Email"/>
                    <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
                </div>
                <div class="form-group has-feedback">
                    <input type="password" class="form-control" placeholder="Password"/>
                    <span class="glyphicon glyphicon-lock form-control-feedback"></span>
                </div>
                <div class="row">
                    <div class="col-xs-7">
                        <div class="checkbox">
                            <label>
                                <input type="checkbox"> Se souvenir de moi
                            </label>
                        </div>
                    </div><!-- /.col -->
                    <div class="col-xs-5">
                        <button type="submit" class="btn btn-primary btn-block btn-flat">Connexion</button>
                    </div><!-- /.col -->
                </div>
            </form>

            <a href="#">J'ai oublié mon mot de passe</a><br>
            <a href="register.html" class="text-center">Créer un compte</a>

        </div><!-- /.login-box-body -->
    </div>
{% endblock %}